{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Dev Server",
            "request": "launch",
            "type": "node-terminal",
            "presentation": {
                "hidden": true,
                "group": "build",
                "order": 1
            },
            "internalConsoleOptions": "neverOpen"
        },
        {
            "command": "npm run build:w",
            "name": "Build Watch",
            "request": "launch",
            "type": "node-terminal",
            "presentation": {
                "hidden": true,
                "group": "build",
                "order": 1
            },
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "${defaultBuildTask}"
        }
    ],
    "compounds": [
        {
            "name": "Dev",
            "configurations": [
                "Build Watch",
                "Dev Server"
            ]
        }
    ]
}